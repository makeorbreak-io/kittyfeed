<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Black.NoTitleBar"
    tools:context=".FeedMeNowActivity">

    <android.support.v7.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="324dp"
        android:layout_marginBottom="111dp"
        android:layout_marginTop="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75">

        <ImageView
            android:id="@+id/sadKitty"
            android:layout_width="160dp"
            android:layout_height="164dp"
            app:layout_column="6"
            app:layout_row="0"
            app:srcCompat="@drawable/sad_kitty"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="89dp" />

        <ImageView
            android:id="@+id/happyKitty"
            android:layout_width="153dp"
            android:layout_height="164dp"
            android:visibility="invisible"
            app:layout_column="6"
            app:layout_row="0"
            app:srcCompat="@drawable/happy_kitty"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="89dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="162dp"
            android:layout_height="105dp"
            android:background="none"
            android:backgroundTint="none"
            android:scaleType="fitCenter"
            app:layout_column="6"
            app:layout_row="9"
            app:srcCompat="@drawable/canned_food" />

    </android.support.v7.widget.GridLayout>

</android.support.constraint.ConstraintLayout>